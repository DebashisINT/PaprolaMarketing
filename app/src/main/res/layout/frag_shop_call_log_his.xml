<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:clickable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_55sdp"
            android:orientation="horizontal"
            android:layout_gravity="center">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/_3sdp"
                android:layout_marginBottom="@dimen/_1sdp"
                app:cardBackgroundColor="@color/transparent"
                app:cardCornerRadius="@dimen/_250sdp"
                app:cardElevation="@dimen/_3sdp">

                <TextView
                    android:id="@+id/tv_frag_shop_call_his_shop_initial"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:background="@color/default_text_color"
                    android:gravity="center"
                    android:text="A"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_13sdp"
                    android:textStyle="bold" />

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/tv_frag_shop_call_his_shop_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:maxLines="2"
                android:paddingLeft="@dimen/_9sdp"
                android:text="Name"
                android:textColor="@color/black"
                android:textSize="@dimen/_14sdp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_frag_shop_call_log_his_addr"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginLeft="@dimen/_25sdp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/_18sdp"
                android:layout_height="@dimen/_18sdp"
                android:layout_gravity="center"
                android:background="@drawable/icon_location" />

            <TextView
                android:id="@+id/tv_frag_shop_call_his_shop_addr"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center|start"
                android:maxLines="2"
                android:text="Address"
                android:textColor="@color/gray_50"
                android:textSize="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_5sdp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp"
            android:orientation="horizontal"
            android:background="@drawable/shape_custom_border_blue_button"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginLeft="@dimen/_3sdp"
            android:layout_marginRight="@dimen/_3sdp">

            <TextView
                android:id="@+id/tv_row_call_log_his_date"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Call Date"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="@dimen/_11sdp"/>

            <TextView
                android:id="@+id/tv_row_call_log_his_time"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Call Time"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="@dimen/_11sdp"/>


            <TextView
                android:id="@+id/tv_row_call_log_his_duration"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Duration"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="@dimen/_11sdp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.1"
                android:text="Status"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="@dimen/_11sdp"/>


        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_frag_shop_call_log_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>

    </LinearLayout>

</LinearLayout>